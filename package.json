{
  "name": "sdu-react-scripts",
  "version": "1.0.4",
  "license": "MIT",
  "main": "index.js",
  "author": {
    "name": "Daphne Smit",
    "email": "D.smit@sdu.nwl"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/elseu/sdu-react-scripts"
  },
  "bugs": {
    "url": "https://github.com/elseu/sdu-react-scripts/issues"
  },
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint-fix": "eslint --fix . --ext .ts,.tsx,.js,.jsx",
    "prepublishOnly": "npm run lint"
  },
  "bin": {
    "sdu-react-scripts": "./bin/sdu-react-scripts.js"
  },
  "lint-staged": {
    "**/*.(js|ts|tsx)": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "develop",
        "prerelease": true
      },
      {
        "name": "release",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "semantic-release-slack-bot",
        {
          "notifyOnSuccess": true,
          "notifyOnFail": true,
          "packageName": "sdu-react-scripts",
          "markdownReleaseNotes": true
        }
      ]
    ]
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "4.x",
    "@typescript-eslint/parser": "4.x",
    "eslint": "7.x",
    "react": "17.x",
    "typescript": "4.x",
    "rollup": "^2.42.3"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@rollup/plugin-url": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "commander": "^7.2.0",
    "enquirer": "^2.3.6",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-standard": "^4.1.0",
    "rollup-plugin-node-externals": "^2.2.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.18.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "react": "17.0.1",
    "rollup": "^2.42.3",
    "typescript": "^4.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
