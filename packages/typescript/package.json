{
  "name": "@elseu/sdu-react-scripts-typescript",
  "version": "1.0.0",
  "description": "Shared SduOne Typescript configuration",
  "main": "tsconfig.json",
  "repository": "https://github.com/elseu/sdu-react-scripts",
  "author": {
    "name": "Carlo Bernardini",
    "email": "c.bernardini@sdu.nl"
  },
  "files": [
    "tsconfig.json"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "release": "semantic-release"
  },
  "release": {
    "monorepo": {
      "debug": true,
      "analyzeCommits": {
        "format": "angular"
      },
      "generateNotes": {
        "preset": "angular"
      }
    },
    "extends": "semantic-release-monorepo",
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator"
    ]
  },
  "devDependencies": {
    "semantic-release": "^22.x",
    "semantic-release-monorepo": "^8.x",
    "semantic-release-slack-bot": "^4.0.2"
  }
}
